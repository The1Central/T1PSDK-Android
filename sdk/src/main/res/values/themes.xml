<resources>

    <style name="BaseText">
        <item name="android:fontFamily">@font/the1_official_regular</item>
    </style>

    <style name="Title" parent="BaseText">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Description" parent="BaseText">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/gray64</item>
    </style>

    <style name="BaseButton">
        <item name="android:fontFamily">@font/the1_official_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Positive" parent="BaseButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_corner_rectangle_positive_selector</item>
    </style>

    <style name="Negative" parent="BaseButton">
        <item name="android:textColor">@color/gray64</item>
        <item name="android:background">@drawable/rounded_corner_rectangle_negative_selector</item>
    </style>

</resources>